# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                 controllers.Application.index
GET        /startups-by-location             controllers.Application.startupsByLocation

#Locations
GET        /locations/:countryName           controllers.Locations.getCountriesByString(countryName: String)
GET        /locations/id/:countryId          controllers.Startups.getStartupsByLocationId(countryId: Int)

#Sturtups
GET        /sturtups/:id                     controllers.Startups.getStartupById(id: Long)
GET        /startups/totalfundraising        controllers.Startups.getNumberOfStartupsFundraising()

# Javascript routes for AJAX
GET        /assets/javascripts/routes        controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.at(path="/public", file)
