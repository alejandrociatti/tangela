# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                 controllers.Application.index
GET        /startups-by-location             controllers.Application.startupsByLocation

#Locations
GET        /locations/name/:countryName      controllers.Locations.getCountriesByString(countryName: String)
GET        /locations/id/:countryId          controllers.Startups.getStartupsByLocationId(countryId: Int)
GET        /locations/country-list           controllers.Locations.getCountries

#Startups
GET        /startups/id/:id                   controllers.Startups.getStartupById(id: Long)
GET        /startups/total-fundraising        controllers.Startups.getNumberOfStartupsFundraising()

# Javascript routes for AJAX
GET        /assets/javascripts/routes        controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.at(path="/public", file)
